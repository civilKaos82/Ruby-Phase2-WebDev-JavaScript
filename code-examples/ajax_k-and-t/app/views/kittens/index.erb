<h3>Add a New Kitten</h3>

<form action="/kittens/new">
  <label>Kitten:</label>
  <input type="text" name="name">

  <label>Breed:</label>
  <input type="text" name="breed">

  <input type="submit" formmethod="post">
</form>

<div id="kittens">
  <% @kittens.each do |k| %>
    <div class="kitten">
      <p><strong><%= k.name %></strong></p>
      <p><em><%= k.breed %></em></p>
    </div>
  <% end %>
</div>
